<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEcommerceDesign.TabsPage"
             xmlns:pages="MauiEcommerceDesign.Pages">
    <TabBar>
        <Tab Title="{Binding Home.Title}"
             Icon="{Binding Home.Icon}">
            <ShellContent ContentTemplate="{DataTemplate pages:IndexPage}" />
        </Tab>
        <Tab Title="{Binding Wishlist.Title}"
             Icon="{Binding Wishlist.Icon}">
            <ShellContent ContentTemplate="{DataTemplate pages:TestPage}" />
        </Tab>
        <Tab Title="{Binding ListenLater.Title}"
             Icon="{Binding ListenLater.Icon}">
            <ShellContent ContentTemplate="{DataTemplate pages:CartPage}" />
        </Tab>
        <Tab Title="{Binding ListenTogether.Title}"
             Icon="{Binding ListenTogether.Icon}">
            <ShellContent 
                ContentTemplate="{DataTemplate pages:IndexPage}" />
        </Tab>
        <Tab Title="{Binding Settings.Title}"
             Icon="{Binding Settings.Icon}">
            <ShellContent ContentTemplate="{DataTemplate pages:IndexPage}" />
        </Tab>
    </TabBar>
</Shell>